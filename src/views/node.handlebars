<script src="/js/node.js"></script>

<div class="login-page">
  <div class="login-box">
    <div class="login-logo" style="margin-bottom: 30px">
      <img src="../../images/ConsightLogo_TextUnder.svg" alt="Consight Logo" width="40%" style="opacity: .8">
    </div>
      <!-- left column -->
    <!-- general form elements -->
    <div class="card card-success card-outline">
      <div class="card-body box-profile">
      <h3 class="profile-username text-center">{{title}}</h3>
      
      <!-- /.card-header -->
      <!-- form start -->
      <form method="POST">
        <div class="card-body">
          <div class="form-group">
            <label for="uuid">UUID</label>
            <input type="text" class="form-control" id="uuid" name="uuid" value="{{node.uuid}}" placeholder="Enter UUID" {{#if node.uuid}} disabled {{/if}} >
          </div>
          <div class="form-group">
            <label for="name">Node Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{node.name}}" placeholder="Enter Node Name">
          </div>
          <div class="form-group">
            <label for="name">Type</label>
            <div class="form-check">
              <input type="radio" id="static" name="node_type" value="static" {{#if node.location}} checked {{/if}} onchange="nodeTypeRadioChanged(this)">
              <label for="static">Static</label>
            </div>
            <div class="form-check">
              <input type="radio" id="dynamic" name="node_type" value="dynamic" {{#unless node.location}} checked {{/unless}} onchange="nodeTypeRadioChanged(this)">
              <label for="dynamic">Dynamic</label>
            </div>
            <div class="form-group">
              <label for="x">X Coordinate</label>
              <input type="text" class="form-control" id="x" name="x" value="{{node.location.coordinates.[0]}}" {{#unless node.location}} disabled {{/unless}}>
            </div>
            <div class="form-group">
              <label for="y">Y Coordinate</label>
              <input type="text" class="form-control" id="y" name="y" value="{{node.location.coordinates.[1]}}" {{#unless node.location}} disabled {{/unless}}>
            </div>
          </div>
        </div>
        <!-- /.card-body -->
        <button type="submit" class="btn btn-block btn-success">Submit</button>
      </form>
      <a type="button" class="btn btn-block" href="../..">Back</a>
    </div>
    <!-- /.card -->
    </div>
  </div>
</div>